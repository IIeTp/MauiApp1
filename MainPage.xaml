<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">
    <StackLayout Margin="20">
        <Entry x:Name="searchEntry" Placeholder="Enter search term"/>
        <Button Text="Search" Clicked="OnSearchClicked"/>
        <ScrollView>
            <StackLayout x:Name="stackLayout"/>
        </ScrollView>
        <Label x:Name="resultLabel" Text="Result will be displayed here" FontSize="Large" FontAttributes="Bold" Margin="0,10,0,0" />
    </StackLayout>
</ContentPage>
